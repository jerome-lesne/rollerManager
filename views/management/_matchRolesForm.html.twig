<form id="addmatchrole" hx-post="/add-match-role" hx-target="#roleMatchList" hx-swap="beforeend" class="m-4">
    <div class="flex flex-col md:flex-row md:gap-4 md:items-center">
        <label class="form-control w-full">
            <div class="label">
                <span class="label-text">Nom du rôle<i class="text-red-500">*</i></span>
            </div>
            <input type="text" name="name" placeholder="Nom" class="input input-sm input-bordered w-full" />
            <p class="text-red-500">{{error}}</p>
        </label>
    </div>
    <label class="form-control flex justify-center items-center">
        <div class="form-control mt-4 w-full">
            <button class="btn btn-primary btn-sm" type="submit">Créer le rôle de match</button>
        </div>
    </label>
</form>
