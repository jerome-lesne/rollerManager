<td id="editTeam" colspan="3">
    <form hx-post="/edit-team/{{idTeam}}" hx-target="closest tr" hx-swap="outerHTML" enctype="multipart/form-data"
        class="flex flex-col justify-center items-center gap-2">
        <div class="flex justify-center gap-2 md:gap-4">
            <label class="form-control w-2/3">
                <div class="label">
                    <span class="label-text">Logo</span>
                </div>
                <input type="file" name="logo"
                    class="file-input file-input-sm file-iput-bordered file-input-secondary w-full" />
                <p class="text-red-500">{{errorMulter}}</p>
            </label>
            <label class="form-control w-1/3">
