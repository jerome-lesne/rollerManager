                {% endif %}
            </div>
            <div class="w-1/5 overflow-auto">
                <div class="font-light">{{attendee.member.pronoun}}</div>
            </div>
            <div class="w-3/5 overflow-auto">
                <div class="font-bold">{{attendee.member.derbyName}}</div>
                <div class="text-sm opacity-50">{{attendee.member.firstName}}
                    {{attendee.member.name}}</div>
                {% if member.playerNumber %}
                <div class="text-sm opacity-50">NÂ°{{attendee.member.playerNumber}}</div>
                {% endif %}
