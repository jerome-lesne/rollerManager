<div class="modal-box max-w-screen-sm" id="modal-box">
    <form method="dialog">
        <button class="btn btn-sm btn-circle btn-ghost absolute right-4 top-4" hx-get="/cancel-create-event"
            hx-target="#modalEvent" hx-swap="outerHTML">✕</button>
        <div class="dropdown absolute left-4 top-4">
            <div tabindex="0" role="button" class="btn btn-sm btn-ghost btn-circle">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                    class="inline-block w-5 h-5 stroke-current">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z">
                    </path>
                </svg>
                </button>
            </div>
            <ul tabindex="0" class="menu menu-sm dropdown-content mt-1 z-[1] p-2 shadow bg-base-200 rounded-box w-52">
                <li class="text-blue-500"><a hx-get="/edit-match-form/{{match.id}}" hx-target="#modal-box"
                        hx-swap="outerHTML">Editer</a></li>
                <li class="text-red-500"><a hx-delete="/delete-match/{{match.id}}" hx-target="#modalEvent"
                        hx-swap="outerHTML" hx-confirm="Confirmer la suppression de l'événement ?">Supprimer</a>
                </li>
            </ul>
        </div>
    </form>
    <div class="flex flex-col items-center justify-center w-full prose">
        <h3>Match</h3>
        <div class="w-full bg-base-300 p-4">
            <div class="w-full flex flex-col items-center justify-center">
                {% if match.matchType == "Championnat" %}
                <div class="badge badge-success badge-outline lg:badge-lg">
                    {{match.matchType}}
                </div>
                {% endif %}
                {% if match.matchType == "Amical" %}
                <div class="badge badge-info badge-outline lg:badge-lg">
                    {{match.matchType}}
                </div>
                {% endif %}
                <h4 class="w-full flex">
                    <div class="w-2/5 text-center">{{match.team.name}}</div>
                    <div class="w-1/5 text-center italic">- VS -</div>
                    <div class="w-2/5 text-center">{{match.opponent}}</div>
                </h4>
            </div>
            <div class="w-full">
                {% if match.allDay %}
                <h4>Jour : </h4>
                <p>{{match.start | french_date_day}}</p>
                {% else %}
                <h4>Horaires : </h4>
                <p>{{match.start | french_date}} - {{match.end | french_date}}</p>
                {% endif %}
            </div>
            <div class="w-full">
                <h4>Lieu : </h4>
                <p>{{match.place}}</p>
                {% if match.mapLink %}
                {% if match.mapLink.type == "iframe" %}
                <iframe src="{{match.mapLink.value}}" class="w-full aspect-[4/3]" style="border:0;" allowfullscreen=""
                    loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                {% else %}
                <p class="mt-0"><a class="link link-primary" href="{{match.mapLink.value}}" target="_blank"
                        rel="noopener noreferrer">Lien maps</a></p>
                {% endif %}
                {% endif %}

            </div>
            <div class="w-full">
                <h4>Informations sur l'évènement : </h4>
                <p>{{match.instructions}}</p>
            </div>
            <div class="w-full">
                <h4>Limite d'inscription : </h4>
                <p class="text-red-400">{{match.registrationDeadline | french_date}}</p>
            </div>
            <div class="w-full flex flex-col justify-center items-center">
                <div id="actionBtn">
                    {% if userInMatch %}
                    <button id="withdraw" class="btn btn-error btn-sm md:btn-md" type="button"
                        hx-get="/withdraw-from-match/{{match.id}}" hx-target="#id_{{connectedMember.id}}"
                        hx-swap="outerHTML swap:1s" hx-confirm="Confirmez-vous votre désinscription ?">Se
                        désinscrire</button>
                    {% else %}
                    <button id="attend" class="btn btn-primary btn-sm md:btn-md" type="button"
                        hx-get="/attend-match/{{match.id}}" hx-target="next tbody" hx-swap="afterbegin"
                        hx-confirm="Confirmez-vous votre participation ?">Participer
                        !</button>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="flex flex-col w-full border-opacity-50">
            <div class="divider">Participant•e•s : </div>
        </div>
        <div class="w-full">
            <table class="table table-xs sm:table-sm md:table-md lg:table-lg w-full mt-0">
                <thead class="sticky -top-6 z-10">
                    <tr class="bg-base-100">
                        <th class="text-center">Nom</th>
                        <th class="text-center">Equipe</th>
                    </tr>
                </thead>
                <tbody>
                    {% for attendee in match.attendees %}
                    {% include "calendar/_matchAttendeeElmt.html.twig" %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
