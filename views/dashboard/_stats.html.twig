<div class="w-full sm:w-11/12 lg:w-10/12 xl:w-8/12 h-1/2 md:h-1/4 flex flex-col justify-center items-center">
    <div class="stats shadow stats-vertical md:stats-horizontal w-full">
        <div class="stat">
            <div class="stat-figure text-primary">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                    stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="inline-block w-8 h-8 stroke-current">
                    <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" />
                    <circle cx="9" cy="7" r="4" />
                    <path d="M22 21v-2a4 4 0 0 0-3-3.87" />
                    <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                </svg>
            </div>
            <div class="stat-title">Membre(s)</div>
            <div class="stat-value text-primary">{{membersNb}}</div>
            {% if 'Bureau' in connectedMember.role %}
            <div class="stat-desc text-info">Demande(s) d'essai : {{trialNb}}</div>
            {% else %}
            <div class="stat-desc">Membres actifs</div>
            {% endif %}
        </div>
        <div class="stat">
            <div class="stat-figure text-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                    class="inline-block w-8 h-8 stroke-current">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
            </div>
            <div class="stat-title">Equipe(s)</div>
            <div class="stat-value text-secondary">{{teamsNb}}</div>
            <div class="stat-desc">-</div>
        </div>
        <div class="stat">
            <div class="stat-figure text-success">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                    stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="inline-block w-8 h-8 stroke-current">
                    <path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6" />
                    <path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18" />
                    <path d="M4 22h16" />
                    <path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22" />
                    <path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22" />
                    <path d="M18 2H6v7a6 6 0 0 0 12 0V2Z" />
                </svg>
            </div>
            <div class="stat-title">Match(s) Ã  venir</div>
            <div class="stat-value">{{upcomingMatchesNb}}</div>
            <div class="stat-desc text-success">Prochain match : {{daysToNextMatch}} jours</div>
        </div>
    </div>
</div>
