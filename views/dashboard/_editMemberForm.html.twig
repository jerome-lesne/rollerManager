<tr class="overflow-scroll">
    <td colspan="3" style="padding: 0px;">
        <form hx-put="/edit-member/{{member.id}}" hx-target="closest tr" hx-swap="outerHTML" hx-include="this"
            hx-trigger="click from:find .validateForm" hx-confirm="Confirmer la modification ?">
            <div class="mainInfo bg-base-100 flex h-full">
                <div class="w-3/5 py-4 px-3">
                    <div class="flex flex-col sm:flex-row items-center gap-2 sm:gap-8 md:gap-16 lg:gap-20 h-full">
                        <div class="h-full flex flex-col justify-around">
                            <div>
                                <input type="file"
                                    class="file-input file-input-bordered file-input-xs file-input-secondary w-full"
                                    hx-post="/new-member" hx-params="picture" hx-target="next p" name="picture" />
                                <p class="text-red-500">{{errorMulter}}</p>
                            </div>
                            <div>
                                <input type="text" class="input input-primary input-xs w-full my-1" name="pronoun"
                                    value="{{member.pronoun}}">
                            </div>
                        </div>
                        <div class="sm:w-1/3">
                            <input type="text" class="input input-primary input-xs w-full my-1" name="derbyName"
                                value="{{member.derbyName}}">
                            <input type="text" class="input input-primary input-xs w-full my-1" name="firstName"
                                value="{{member.firstName}}">
                            <input type="text" class="input input-primary input-xs w-full my-1" name="name"
                                value="{{member.name}}">
                            <input type="text" class="input input-primary input-xs w-full my-1" name="playerNumber"
                                value="{{member.playerNumber}}">
                        </div>
                    </div>
                </div>
                <div class="w-1/5 py-4 px-3">
                    <div class="flex items-center justify-center overflow-auto h-full">
                        <select class="select select-xs select-primary w-full m-1" name="team">
                            <option value="no_team">--Aucune Equipe--</option>
                            {% for team in club.teams %}
                            {% if team.id == member.team.id %}
                            <option value="{{team.id}}" selected>{{team.name}}</option>
                            {% else %}
                            <option value="{{team.id}}">{{team.name}}</option>
                            {% endif %}
                            {% endfor %}
                        </select>
                    </div>

                </div>
                <div class="w-1/5 py-4 px-3">
                    <div class="font-bold flex flex-col items-center justify-center gap-2 h-full">
                        <select class="select select-xs select-primary w-full" name="role" multiple="multiple">
                            <option value="no_role">--Aucun Role--</option>
                            {% for role in club.roles %}
                            {% if role in member.role %}
                            <option value="{{role}}" selected>{{role}}</option>
                            {% else %}
                            <option value="{{role}}">{{role}}</option>
                            {% endif %}
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
            <div class="additionalInfo bg-base-100">
                <div class="flex flex-col sm:flex-row justify-around gap-4 h-full p-2">
                    <div class="w-full sm:w-1/2">
                        <div class="flex justify-between items-center gap-4">
                            <p class="w-1/3">Email:</p>
                            <input type="text" class="input input-primary input-xs w-2/3 my-1" name="mail"
                                value="{{member.mail}}">
                        </div>
                        <div class="flex justify-between items-center gap-4">
                            <p class="w-1/3">Tel:</p>
                            <input type="phone" class="input input-primary input-xs w-2/3 my-1" name="phone"
                                value="{{member.phone}}">
                        </div>
                        <div class="flex justify-between items-center gap-4">
                            <p class="w-1/3">Médical:</p>
                            <textarea name="medicalInfos" class="textarea textarea-primary textarea-xs w-2/3"
                                rows="5">{{member.medicalInfos}}</textarea>
                        </div>
                        <div class="flex justify-between items-center gap-4">
                            <p class="w-1/3">Contact Urgence:</p>
                            <input type="text" class="input input-primary input-xs w-2/3 my-1"
                                name="emergencyContactName" value="{{member.emergencyContactName}}">
                        </div>
                        <div class="flex justify-between items-center gap-4">
                            <p class="w-1/3">Contact Urgence Tel:</p>
                            <input type="phone" class="input input-primary input-xs my-1 w-2/3"
                                name="emergencyContactPhone" value="{{member.emergencyContactPhone}}">
                        </div>
                    </div>

                    <div class="w-full sm:w-1/2">
                        <div class="flex justify-between items-center gap-4">
                            <p class="w-1/3">Joue en mixte:</p>
                            <input type="checkbox" class="checkbox checkbox-xs checkbox-primary"
                                name="acceptsMixedGender" {% if member.acceptsMixedGender=="on" %} checked="checked" {%
                                endif %}>
                        </div>
                        <div class="flex justify-between items-center gap-4">
                            <p class="w-1/3">Certificat médical:</p>
                            <input type="date" class="input input-primary input-xs w-2/3 my-1" name="medicalCertificat"
                                value="{{member.medicalCertificat|date('Y-m-d')}}">
                        </div>
                        <div class="flex justify-between items-center gap-4">
                            <p class="w-1/3">N° de licence:</p>
                            <input type="text" class="input input-primary input-xs w-2/3 my-1" name="licenceNumber"
                                value="{{member.licenceNumber}}">
                        </div>
                        <div class="flex justify-between items-center gap-4">
                            <p class="w-1/3">MS theorique:</p>
                            <input type="date" class="input input-primary input-xs w-2/3 my-1" name="theoreticalMS"
                                value="{{member.theoreticalMS|date('Y-m-d')}}">
                        </div>
                        <div class="flex justify-between items-center gap-4">
                            <p class="w-1/3">MS pratique:</p>
                            <input type="date" class="input input-primary input-xs w-2/3 my-1" name="practicalMS"
                                value="{{member.practicalMS|date('Y-m-d')}}">
                        </div>
                        <div class="flex justify-between items-center gap-4">
                            <p class="w-1/3">Adresse:</p>
                            <input type="text" class="input input-primary input-xs w-2/3 my-1" name="address"
                                value="{{member.address}}">
                        </div>
                        <div class="flex justify-between items-center gap-4">
                            <p class="w-1/3">Code postal:</p>
                            <input type="text" class="input input-primary input-xs w-2/3 my-1" name="zipCode"
                                value="{{member.zipCode}}">
                        </div>
                        <div class="flex justify-between items-center gap-4">
                            <p class="w-1/3">Ville:</p>
                            <input type="text" class="input input-primary input-xs w-2/3 my-1" name="city"
                                value="{{member.city}}">
                        </div>
                        <div class="flex justify-between items-center gap-4">
                            <p class="w-1/3">Date de naissance:</p>
                            <input type="date" class="input input-primary input-xs w-2/3 my-1" name="birthday"
                                value="{{member.birthday|date('Y-m-d')}}">
                        </div>
                        <div class="flex justify-between items-center gap-4">
                            <p class="w-1/3">Lieu de naissance:</p>
                            <input type="text" class="input input-primary input-xs w-2/3 my-1" name="birthplace"
                                value="{{member.birthplace}}">
                        </div>
                    </div>
                </div>
                <div class="flex justify-center items-center pb-2 gap-4">
                    <button class="btn btn-xs sm:btn-sm btn-primary validateForm">Valider</button>
                    <button class="btn btn-xs sm:btn-sm btn-error" hx-get="/cancel-member-form/{{member.id}}"
                        hx-target="closest tr" hx-swap="outerHTML" hx-confirm="unset">Annuler</button>
                </div>
            </div>
        </form>
    </td>
</tr>
